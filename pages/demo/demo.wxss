/* pages/demo/demo.wxss */
.demo-top-view{
  background: #D7583F;
  padding: 15px 0;
  display:flex;
  flex-direction:column;
  align-items:center;
}
.userinfo-avatar{
  width:128rpx;
  height:128rpx;
  border-radius:50%;
}
.send-text{
  font-size: 14px;
  color: rgba(0, 0, 0, 0.5);
  padding: 5px 0;
}
.demo-text{
  color: rgba(0, 0, 0, 0.5);
}
.demo-btn{
  width:260px;
  background:#F5B0A1;
  line-height:36px;
  height:36px;
  margin:15px 0;
  color: #fff;
  font-size: 14px;
  border-radius: 100px;
}
.t-menu{
  width: 260px;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.menu-lib{
  text-align: center;
  font-size: 13px;
  flex: 1;
  color: #fff;
}
.menu-lib .fa{
  padding-right: 5px;
}
.demo-list{
  padding: 15px;
}
.list-top{
  padding-bottom: 10px;
  color:rgba(0, 0, 0, 0.45);
  font-size: 12px;
}
.list-main{
  font-size: 12px;
  border: 1rpx solid #777;
  border-radius: 4px;
  padding: 5px;
  display:flex;
  margin-bottom: 5px;
}
.revice-det{
  display: flex;
  flex: 1;
  flex-direction: column;
  padding-left: 8px;
}
.revice-info-avatar{
  width: 30px;
  height:30px;
}
.name{

}
.num{
  float: right;
  font-weight: 700;
}
.list-time{
  color: rgba(0, 0, 0, 0.45);
}