/**index.wxss**/  
.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
  height: 80rpx;
  display: flex;
  background: #fff;
}  
.swiper-tab-list{  
  font-size: 30rpx;  
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  color: #777777;  
}  
.swiper-text{
  height: 76rpx;
}
.split{
  flex: 1;
  width:40px;
  margin:0 auto;
}
.on{
  color: #da7c0c;  
}  
.on .split{
  border-bottom: 5rpx solid #da7c0c;
}
.swiper-box{
   display: block; 
   width: 100%; 
   overflow: hidden; 
   flex: 1;
}  

.send-view{
  background: #eee;
  display: flex;
  flex-direction: column;
  padding: 15px 0;
  align-items:center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.revice-info-avatar{
  width: 30px;
  height:30px;
}
.send-text{
  font-size: 12px;
  padding: 8px 0;
}
.send-lib{
  display: flex;
  flex-direction: row;
  justify-content:center;
  width: 100%;
  margin-top: 10px;
}
.lib-t{
  display: flex;
  flex-direction: column;
  text-align: center;
}
.text-footer{
  position: absolute;
  bottom: 10px;
  text-align: center;
  font-size: 10px;
  color: rgba(0, 0, 0, 0.45);
  width: 100%;
}
.revice-list{
  background: #fff;
  padding: 8px;
  display: flex;
  font-size: 12px;
}
.revice-det{
  display: flex;
  flex: 1;
  flex-direction: column;
  padding-left: 8px;
}
.list-info{
  display: flex;
  justify-content: space-between;
}
.list-time{
  text-align: left;
}